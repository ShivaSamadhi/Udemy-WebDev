
<article class="post-item">
  <h2 class="postTitle"><%= post.title %></h2>
  <p class="post-item-author">By <%= post.name %></p>
  <p><%= post.summary %></p>
  <div class="post-actions">
    <form action="/posts/<%= post.id%>/delete" method="post">
      <button id="<%= post.id %>" class="btn btn-alt" type="submit">Delete PostModel</button>
    </form>
    <a href="/posts/<%= post.id %>/edit">Edit PostModel</a>
    <a class="btn" href="/posts/<%= post.id %>">View PostModel</a>
  </div>
</article>