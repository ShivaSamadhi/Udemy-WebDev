<%- include('header'); -%>
<body class="bg-transparent">

    <div class="box" id="heading">
        <h1><%=listTitle%></h1>
    </div>

    <div class="box">
        <%for (const item of todoItems) {%>
        <div class="item">

            <input type="checkbox">
            <p><%=item%></p>

        </div>
        <%}%>

        <form class="item" action="<%= postRoute %>" method="post">
            <input
                    type="text"
                    name="todoItem"
                    id="todoItem"
                    placeholder="New Item"
                    autocomplete="pff">

            <button
                    name="list"
                    type="submit"
                    >
                +
            </button>
        </form>

        <div class="container text-center ">
            <a href=<%=changeList%>>
                <button class="btn btn-secondary w-50 mt-2 mb-2">
                    <%if(postRoute === `/`){%>
                        Work List
                    <%} else {%>
                        Main List
                    <%}%>
                </button>
            </a>
        </div>

    </div>












    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
<%- include('footer'); -%>